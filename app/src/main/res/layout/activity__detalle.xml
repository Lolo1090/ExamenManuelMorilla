<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lolo.examenmanuelmorilla.activity_Detalle">


    <TextView
        android:id="@+id/txtProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtProducto"
        android:layout_alignStart="@+id/txtProducto"
        android:layout_below="@+id/txtProducto"
        android:textColor="@color/rojito"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPrecio"
        android:layout_alignStart="@+id/txtPrecio"
        android:layout_below="@+id/txtPrecio"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtId"
        android:layout_alignStart="@+id/txtId"
        android:layout_below="@+id/txtId"
        android:text="TextView" />

    <ImageView
        android:id="@+id/fotoProducto"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtDescripcion"
        android:layout_marginTop="57dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/fotoAlante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        app:srcCompat="@drawable/forward" />

    <ImageView
        android:id="@+id/fotoAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fotoAlante"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_toEndOf="@+id/txtDescripcion"
        android:layout_toRightOf="@+id/txtDescripcion"
        app:srcCompat="@drawable/back" />
</RelativeLayout>
